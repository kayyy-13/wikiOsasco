<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Jogos</title>
    <link rel="stylesheet" href="/css/lst.css">
    </style>
</head>

<body>

    <header>
        <div class="logo-container">
            <img src="/fotos/Wiki_logo2(1)(1).png" alt="Logo Time de Vôlei">
            <div class="logo-text">WikiOsasco - Sistema Administrativo</div>
        </div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                
                <li><a href="/admin/Jogo/lst">Jogos</a></li>
                <li><a href="/admin/escalacao/lst">Escalação</a></li>
                <li><a href="/admin/socio/lst">Sócios</a></li>
            </ul>
        </nav>
    </header>

    <div class="content">
        <h1>Lista de Jogos</h1>

        <table>
            <thead>
                <tr>
                    <th>Adversário</th>
                    <th>Data</th>
                    <th>Local</th>
                    <th>Resultado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% Jogos.forEach(function(Jogo) { %>
                    <tr>
                        <td><%= Jogo.adversario.nome %></td>
                        <td><%= Jogo.data.toLocaleDateString('pt-BR') %></td>
                        <td><%= Jogo.local %></td>
                        <td><%= Jogo.resultado || '—' %></td>
                        <td>
                            <a class="action-link" href="/admin/Jogo/edt/<%= Jogo._id %>">Editar</a> |
                            <a class="action-link" href="/admin/Jogo/del/<%= Jogo._id %>" onclick="return confirm('Deseja excluir este jogo?')">Excluir</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <div class="add-player">
            <a href="/admin/Jogo/add" class="btn">+ Adicionar Jogo</a>
        </div>
    </div>

</body>

</html>
